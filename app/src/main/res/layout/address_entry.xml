<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="12dp"
    app:cardCornerRadius="20dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_margin="10dp"
    >

    <LinearLayout
        android:id="@+id/fulldetails_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:background="@color/white"
        >


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:layout_gravity="center_vertical"
            >

            <RadioButton

                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/status_radiobtn"
                android:checked="true"
                android:buttonTint="#34A807"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textlocality"
                android:textStyle="bold"
                android:text="Gaur city"
                android:textColor="@color/black"
                android:layout_gravity="center_vertical"
                android:textSize="25dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:id="@+id/parkingdate"
                android:text="today date"
                android:layout_gravity="center_vertical"
                android:textColor="#777474"
                android:textSize="16dp"/>



        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="46dp"
            android:layout_gravity="center_vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textaddress"
                android:text="AIG Park"
                android:textColor="#777474"
                android:textSize="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" ,"
                android:textColor="#777474"
                android:textSize="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textparkingno"
                android:text="G-123"
                android:textColor="#777474"
                android:textSize="16dp"/>

        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginStart="46dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹ "
                android:textStyle="bold"
                android:textColor="#222222"
                android:textSize="18dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textpricing"
                android:text="Rs. 200"
                android:textStyle="bold"
                android:textColor="#222222"
                android:textSize="18dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="46dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_vertical"
            >


            <TextView
                android:id="@+id/textview_open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already booked for - "
                android:textStyle="bold"
                tools:ignore="InvalidId"></TextView>

            <TextView
                android:id="@+id/timeleftoopen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 hours">
            </TextView>

        </LinearLayout>






    </LinearLayout>

</androidx.cardview.widget.CardView>